<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_yellow"
        android:padding="80dp"
        tools:context=".ui.edit.EditPasswordFragment">

        <EditText
            android:id="@+id/edit_old_password"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/round_corner_layout"
            android:ems="10"
            android:hint="請輸入舊密碼"
            android:inputType="textPassword"
            android:paddingHorizontal="8dp"
            android:text=""
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_new_password"
            android:layout_width="251dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_corner_layout"
            android:ems="10"
            android:hint="請輸入新密碼"
            android:inputType="textPassword"
            android:paddingHorizontal="8dp"
            android:text=""
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_old_password" />

        <EditText
            android:id="@+id/edit_new_password_confirm"
            android:layout_width="251dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_corner_layout"
            android:ems="10"
            android:hint="再次輸入新密碼"
            android:inputType="textPassword"
            android:paddingHorizontal="8dp"
            android:text=""
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_new_password" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_corner_layout"
            android:backgroundTint="@color/orange_ffa626"
            android:text="@string/send"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_new_password_confirm" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>