<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.rn1.puffren.ui.report.sale.SaleReportViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_yellow"
        android:padding="16dp"
        tools:context=".ui.history.item.SaleReportFragment">

        <TextView
            android:id="@+id/title_open_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            style="@style/text_style_login_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_open_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={viewModel.openDate}"
            style="@style/text_style_login_title"
            app:layout_constraintBottom_toBottomOf="@id/title_open_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_open_date"
            tools:text="2021-05-30" />

        <TextView
            android:id="@+id/title_sale_and_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="銷售額與天氣"
            style="@style/text_style_sale_report_sub_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_open_date" />

        <TextView
            android:id="@+id/title_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="銷售額"
            style="@style/text_style_login_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_sale_and_weather" />

        <TextView
            android:id="@+id/title_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="天氣"
            style="@style/text_style_login_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_sale" />

        <EditText
            android:id="@+id/text_sale"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:background="@drawable/round_corner_layout"
            android:inputType="number"
            android:maxLines="1"
            android:ems="10"
            android:paddingHorizontal="8dp"
            android:text="@={viewModel.convertIntToString(viewModel.saleAmount)}"
            android:textAlignment="viewEnd"
            android:textColor="@color/grey_999999"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/title_sale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_sale"
            tools:text="20000" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/round_corner_layout"
            android:entries="@array/weather_main_type"
            android:prompt="@string/select_weather_note"
            android:textColor="@color/grey_999999"
            android:textAlignment="viewEnd"
            android:spinnerMode="dialog"
            app:layout_constraintBottom_toBottomOf="@+id/title_weather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_sale"
            app:layout_constraintTop_toTopOf="@+id/title_weather" />

        <TextView
            android:id="@+id/title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="回報項目"
            style="@style/text_style_sale_report_sub_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_weather" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_report_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/button_report_sale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_item" />

        <Button
            android:id="@+id/button_report_sale"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/round_corner_layout"
            android:backgroundTint="@color/orange_ffa626"
            android:text="回報營收"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>