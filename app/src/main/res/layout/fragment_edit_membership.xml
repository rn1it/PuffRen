<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.rn1.puffren.ui.edit.EditMembershipViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_yellow">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:context=".ui.edit.EditMembershipFragment">

            <TextView
                android:id="@+id/member_level_title"
                style="@style/text_style_small_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/member_level"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/member_level_block"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_corner_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/member_level_title">

                <TextView
                    android:id="@+id/login_account_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/member_login_account"
                    app:layout_constraintEnd_toStartOf="@+id/text_login_account"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/text_login_account"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@{viewModel.user.email}"
                    app:layout_constraintBottom_toBottomOf="@+id/login_account_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/login_account_title"
                    app:layout_constraintTop_toTopOf="@+id/login_account_title"
                    tools:text="XXXX@XXX.XXX" />

                <TextView
                    android:id="@+id/level_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/member_level"
                    app:layout_constraintEnd_toStartOf="@+id/text_level"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_account_title" />

                <TextView
                    android:id="@+id/text_level"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@{viewModel.user.level}"
                    app:layout_constraintBottom_toBottomOf="@+id/level_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/level_title"
                    app:layout_constraintTop_toTopOf="@+id/level_title"
                    tools:text="XXX" />

                <TextView
                    android:id="@+id/nickname_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/member_nickname"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/level_title" />

                <EditText
                    android:id="@+id/edit_nickname"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/round_corner_border"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.nickname}"
                    android:gravity="center|end"
                    app:layout_constraintBottom_toBottomOf="@+id/nickname_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nickname_title"
                    app:layout_constraintTop_toTopOf="@+id/nickname_title"
                    tools:text="阿芙" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/edit_member_title"
                style="@style/text_style_small_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="@string/member_info_fill_note"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/member_level_block" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_member_block"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_corner_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_member_title">

                <TextView
                    android:id="@+id/name_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/member_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/round_corner_border"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.fullName}"
                    android:gravity="center|end"
                    app:layout_constraintBottom_toBottomOf="@+id/name_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/name_title"
                    app:layout_constraintTop_toTopOf="@+id/name_title"
                    tools:text="劉泡芙" />

                <TextView
                    android:id="@+id/city_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/member_city"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_title" />

                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/round_corner_border"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/city_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/city_title"
                    app:layout_constraintTop_toTopOf="@+id/city_title" />

                <TextView
                    android:id="@+id/address_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/member_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/city_title" />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/round_corner_border"
                    android:ems="10"
                    android:inputType="textPostalAddress"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.address}"
                    android:gravity="center|end"
                    app:layout_constraintBottom_toBottomOf="@+id/address_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/address_title"
                    app:layout_constraintTop_toTopOf="@+id/address_title"
                    tools:text="" />

                <TextView
                    android:id="@+id/phone_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/member_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/address_title" />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/round_corner_border"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.phone}"
                    android:gravity="center|end"
                    app:layout_constraintBottom_toBottomOf="@+id/phone_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/phone_title"
                    app:layout_constraintTop_toTopOf="@+id/phone_title"
                    tools:text="" />

                <TextView
                    android:id="@+id/birth_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/member_birthday"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_title" />

                <TextView
                    android:id="@+id/birth_datePicker"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/round_corner_border"
                    android:gravity="center|end"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.birthday}"
                    android:textColor="@color/black_000000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/birth_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/birth_title"
                    app:layout_constraintTop_toTopOf="@+id/birth_title"
                    tools:text="2011-01-30" />

                <CheckBox
                    android:id="@+id/check_read_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="@string/member_privacy_note"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_information"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/birth_title" />

                <ImageView
                    android:id="@+id/image_information"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/information"
                    app:layout_constraintBottom_toBottomOf="@+id/check_read_notification"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/check_read_notification"
                    app:layout_constraintTop_toTopOf="@+id/check_read_notification" />

                <Button
                    android:id="@+id/button_edit_password"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/round_corner_layout"
                    android:backgroundTint="@color/orange_ffa626"
                    android:onClick="@{() -> viewModel.navigateToEditPassword()}"
                    android:text="@string/edit_password"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/check_read_notification" />

                <Button
                    android:id="@+id/button_edit_member_info_done"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/round_corner_layout"
                    android:backgroundTint="@color/orange_ffa626"
                    android:text="@string/edit_member_info_done"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_edit_password" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>