<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="reportItem"
            type="com.rn1.puffren.data.ReportItem" />
        <variable
            name="viewModel"
            type="com.rn1.puffren.ui.report.sale.SaleReportViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/title_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{reportItem.title}"
            style="@style/text_style_login_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="原殼泡芙"/>

        <EditText
            android:id="@+id/text_quantity"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:background="@drawable/round_corner_layout"
            android:inputType="number"
            android:maxLines="1"
            android:ems="10"
            android:paddingHorizontal="8dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/grey_999999"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/title_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_item_name"
            tools:text="26" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
