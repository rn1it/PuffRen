<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.rn1.puffren.ui.car.FoodCartViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_yellow"
        tools:context=".ui.car.content.FoodCartContentFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/basic_info_title"
                style="@style/text_style_small_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/basic_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_order_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_corner_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/basic_info_title">

                <TextView
                    android:id="@+id/order_date_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/order_date"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/order_datePicker"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_corner_border"
                    android:gravity="center|end"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.date}"
                    android:textColor="@color/black_000000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/order_date_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/edit_order_email"
                    app:layout_constraintTop_toTopOf="@+id/order_date_title"
                    tools:text="2011-01-30" />

                <TextView
                    android:id="@+id/order_address_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/order_address"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/order_date_title" />

                <EditText
                    android:id="@+id/edit_order_address"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_corner_border"
                    android:gravity="center|end"
                    android:inputType="textPostalAddress"
                    android:maxLength="40"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.address}"
                    app:layout_constraintBottom_toBottomOf="@+id/order_address_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/edit_order_email"
                    app:layout_constraintTop_toTopOf="@+id/order_address_title"
                    tools:text="XXX" />

                <TextView
                    android:id="@+id/order_name_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/order_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/order_address_title" />

                <EditText
                    android:id="@+id/edit_order_name"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_corner_border"
                    android:gravity="center|end"
                    android:inputType="textPersonName"
                    android:maxLength="12"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.orderName}"
                    app:layout_constraintBottom_toBottomOf="@+id/order_name_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/edit_order_email"
                    app:layout_constraintTop_toTopOf="@+id/order_name_title"
                    tools:text="阿芙" />

                <TextView
                    android:id="@+id/order_phone_title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/order_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/order_name_title" />

                <EditText
                    android:id="@+id/edit_order_phone"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_corner_border"
                    android:gravity="center|end"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.phone}"
                    app:layout_constraintBottom_toBottomOf="@+id/order_phone_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/edit_order_email"
                    app:layout_constraintTop_toTopOf="@+id/order_phone_title"
                    tools:text="0912345678" />

                <TextView
                    android:id="@+id/order_email__title"
                    style="@style/text_style_medium_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/order_email"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/order_phone_title" />

                <EditText
                    android:id="@+id/edit_order_email"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/round_corner_border"
                    android:gravity="center|end"
                    android:inputType="textEmailAddress"
                    android:maxLength="40"
                    android:paddingHorizontal="8dp"
                    android:text="@={viewModel.email}"
                    app:layout_constraintBottom_toBottomOf="@+id/order_email__title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/order_email__title"
                    app:layout_constraintTop_toTopOf="@+id/order_email__title"
                    tools:text="abc@gmail.com" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/order_content_title"
                style="@style/text_style_small_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="@string/order_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_order_detail" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_order_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_corner_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_content_title">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_order_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_food_cart_set" />

                <Button
                    android:id="@+id/button_send_order"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/round_corner_layout"
                    android:backgroundTint="@color/orange_ffa626"
                    android:text="@string/send_order"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_order_content" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>