<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rn1.puffren.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/prodFragment"
        android:name="com.rn1.puffren.ui.product.ProdFragment"
        android:label="fragment_prod"
        tools:layout="@layout/fragment_prod" />

    <fragment
        android:id="@+id/locationFragment"
        android:name="com.rn1.puffren.ui.location.LocationFragment"
        android:label="fragment_location"
        tools:layout="@layout/fragment_location" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.rn1.puffren.ui.product.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="product"
            app:argType="com.rn1.puffren.data.Product" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.rn1.puffren.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"/>

    <fragment
        android:id="@+id/reportFragment"
        android:name="com.rn1.puffren.ui.report.ReportFragment"
        android:label="ReportFragment"
        tools:layout="@layout/fragment_report"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.rn1.puffren.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>

    <dialog
        android:id="@+id/add2cartDialog"
        android:name="com.rn1.puffren.ui.add2cart.Add2cartDialog"
        android:label="Add2cartDialog"
        tools:layout="@layout/dialog_add2cart"/>

    <action
        android:id="@+id/action_global_locationFragment"
        app:destination="@id/locationFragment" />

    <action
        android:id="@+id/action_global_prodFragment"
        app:destination="@id/prodFragment" />

    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_detailFragment"
        app:destination="@id/detailFragment" />

    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"/>

    <action
        android:id="@+id/action_global_reportFragment"
        app:destination="@id/reportFragment"/>

    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment" />

    <action
        android:id="@+id/action_global_add2cartDialog"
        app:destination="@id/add2cartDialog" />

</navigation>